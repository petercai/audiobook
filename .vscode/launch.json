  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server Debugger",
      "type": "debugpy",
      "request": "launch",
      "program": "app.py",
      "console": "integratedTerminal",
      "args": [
        "--share"
      ]
    },
    {
      "name": "Convert Book Debugger",
      "type": "debugpy",
      "request": "launch",
      "program": "app.py",
      "console": "integratedTerminal",
      "args": [
        "--headless",  
        "--ebook", 
        "ebooks/UnravelMe.epub"
      ]
    }
  ]
}