  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server Debugger",
      "type": "debugpy",
      "request": "launch",
      "program": "app.py",
      "console": "integratedTerminal",
      "args": [
        "--share"
      ],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Convert Book Debugger",
      "type": "debugpy",
      "request": "launch",
      "program": "app.py",
      "console": "integratedTerminal",
      "args": [
        "--headless",  
        "--ebook", 
        "ebooks/god-c1.txt",
        "--device",
        "mps",
        "--tts_engine",
        "xtts",
        "--language",
        "zho",
        "--voice",
        "voices/zho/adult/male/yunxi_24000.wav",
      ]
    }
  ]
}